<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">

  <div class="infosperso">
    <label for="prenom"></label>
    <input id="prenom" type="text" class="field"  name="prenom">
  </div>

  <div class="infosperso">
    <label for="email"></label>
    <input id="email" type="email" class="field" name="email">
  </div>
  
  <div class="infosperso">
    <label for="password"></label>
    <input id="password" type="password" class="field" name="password">
  </div>

  {{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  <div>
    <button>Create account</button>
  </div>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>